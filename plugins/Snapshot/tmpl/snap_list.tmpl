<mtapp:listing>
    <mt:if name="__first__">
	<input type="hidden" name="parent_object_type" value="<mt:var name="parent_object_type">" />
	<input type="hidden" name="object_id" value="<mt:var name="object_id">" />
	<input type="hidden" name="action_name" value="" />
	<input type="hidden" name="keep" value="" />
	<mt:if name="blog_id">
	<input type="hidden" name="blog_id" value="<mt:var name="blog_id">" />
	</mt:if>
    <thead>
        <tr>
			<th class="cb"><input type="checkbox" name="id-head" value="all" class="select" /></th>
			<th id="snap-ts"><__trans phrase="Title/Taken On"></th>
			<th id="snap-created"><__trans phrase="Saved By"></th>
			<th id="snap-keep"><__trans phrase="Keep"></th>
			<th id="snap-actions"><__trans phrase="Actions"></th>
        </tr>
    </thead>
    <tbody>
    </mt:if>
        <tr class="<mt:if name="__odd__">odd<mt:else>even</mt:if>">
			<td class="cb" id="delete-<mt:var name="id">"><input type="checkbox" name="id" value="<mt:var name="id">" class="select" /></td>
			<td class="edit-col" id="snap-cell-<mt:var name="id">">
			<mt:if name="title">
			<a href="<mt:var name="script_url">?__mode=snap_view&id=<mt:var name="id">&blog_id=<mt:var name="blog_id">"><mt:var name="title"></a> (<mt:var name="created_on">)
			<mt:else>
			<a href="<mt:var name="script_url">?__mode=snap_view&id=<mt:var name="id">&blog_id=<mt:var name="blog_id">"><mt:var name="created_on"></a>
			</mt:if>
			</td>
			<td class="edit-col">
			<mt:var name="foo">
			<mt:if name="created_by">
			<a href="<mt:var name="script_url">?__mode=view&_type=author&id=<mt:var name="created_by">"><mt:var name="created_by_name"></a>
			<mt:else>
			&nbsp;
			</mt:if>
			</td>
			<td class="edit-col">
			<mt:if name="keep">
			Yes
			<mt:else>
			No
			</mt:if>
			</td>
			<td class="edit-col">
			<a href="<mt:var name="script_url">?__mode=snap_revert&id=<mt:var name="id">&object_id=<mt:var name="object_id">&blog_id=<mt:var name="blog_id">">Revert <mt:var name="parent_object_type"></a>&nbsp;&nbsp;&nbsp;Compare to: 
			<select name="snap_compare_id" id="snap_compare_id" onchange="snap_select(this, <mt:var name="id">);">
			<option value="" selected="selected">Select Version</option>
			<option value="current">Current <mt:var name="parent_object_type"></option>
			<TMPL_LOOP NAME=SNAP_LOOP>
			<option value="<mt:var name="id">">Snapshot: <mt:var name="created_on"></option>
			</TMPL_LOOP>
			</select>
			</td>
        </tr>
    <mt:if name="__last__">
    </tbody>
    </mt:if>
</mtapp:listing>


<$mt:include name="include/footer.tmpl"$>
