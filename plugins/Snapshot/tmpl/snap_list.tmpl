</mt:setvarblock>

<$mt:include name="include/header.tmpl"$>

<mt:setvarblock name="action_buttons">
	<a href="javascript:void(0)"
	onclick="doRemoveSnaps();"
	>Delete</a>
	<a href="javascript:void(0)"
	onclick="doKeepSnaps(1);"
