<mt:setvarblock name="page_title">
Snapshots of <mt:var name="parent_object_type"> <a href="<mt:var name="script_url">?__mode=view&_type=entry&id=<mt:var name="object_id">&blog_id=<mt:var name="blog_id">"><mt:var name="object_title"></a>
</mt:setvarblock>
<mt:setvarblock name="html_title">
Snapshots of <mt:var name="parent_object_type"> "<mt:var name="object_title">"
</mt:setvarblock>
<mt:setvarblock name="system_msg">
	<mt:if name="deleted">
		<mtapp:statusmsg
            id="deleted"
            class="success">
            <__trans phrase="You have successfully deleted the selected snapshots.">
        </mtapp:statusmsg>
	</mt:if>
	
	<mt:if name="updated">
		<mtapp:statusmsg
            id="updated"
            class="success">
            <__trans phrase="You have successfully updated the selected snapshots.">
        </mtapp:statusmsg>
	</mt:if>
</mt:setvarblock>

<mt:setvarblock name="html_head" append="1">

